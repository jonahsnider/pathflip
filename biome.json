{
	"$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
	"files": {
		"ignore": ["node_modules", "dist", "coverage", "deploy", ".pathplanner", "package.json"]
	},
	"formatter": {
		"formatWithErrors": true,
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "single",
			"quoteStyle": "single"
		}
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	},
	"linter": {
		"rules": {
			"all": true,
			"style": {
				"noParameterProperties": "off",
				"useDefaultSwitchClause": "off"
			},
			"correctness": {
				"noNodejsModules": "off"
			}
		}
	}
}
